@model Tax1._0.WebApp.Models.Salary

@{
    ViewData["Title"] = "Edit";
}

<h1>Edycja</h1>

<h4>Edytuj wypłatę</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Month" />           

            <div class="form-group">
                <label asp-for="SalaryAmount" class="control-label"></label>
                <input asp-for="SalaryAmount" class="form-control" />
                <span asp-validation-for="SalaryAmount" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Anuluj</a>
</div>

